{
  "name": "netease_url",
  "version": "1.0.0",
  "description": "网易云音乐下载器",
  "main": "electron.js",
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron-forge start",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:start": "electron-forge start",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make",
    "electron:make-win": "electron-forge make --platform=win32",
    "electron:publish": "electron-forge publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "archiver": "^7.0.1",
    "archiver-utils": "^4.0.1",
    "axios": "^1.7.9",
    "commander": "^13.1.0",
    "crypto": "^1.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.2",
    "ffmetadata": "^1.7.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-id3tag": "^0.9.8",
    "temp-write": "^6.0.0",
    "zip-stream": "^5.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Netease Music Downloader",
        "executableName": "netease-music-downloader",
        "icon": "./assets/icon",
        "asar": true,
        "compression": "maximum",
        "protocols": [
          {
            "name": "Netease URL Protocol",
            "schemes": [
              "netease-url"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "netease_url",
            "authors": "lovelinessmoe",
            "setupIcon": "./assets/icon.ico",
            "loadingGif": "./assets/installer.gif",
            "noMsi": true
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO",
            "icon": "./assets/icon.ico",
            "name": "Netease Music Downloader"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./assets/icon.png",
              "categories": [
                "Audio",
                "Network"
              ],
              "maintainer": "lovelinessmoe",
              "name": "netease-music-downloader",
              "productName": "Netease Music Downloader"
            }
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {
            "preload": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.1.2"
  }
}
